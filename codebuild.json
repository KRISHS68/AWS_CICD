                "LogsConfig" : {
                    "CloudWatchLogs" : {
                        "Status": "ENABLED"
                    }
                },
                "Name" : "hello-world",
                "ServiceRole" : "arn:aws:iam::576912678702:role/codebuild_nginx_jenkins",
                "Source" : {
                    "Location": "https://github.com/KRISHS68/AWS_CICD.git",
                    "Type": "GITHUB"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "586628dc-4be9-4869-8d4f-0aa9a3791692"
                }
            }
