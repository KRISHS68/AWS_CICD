{
    "Resources": {
        "Taskdefinition": {
            "Type" : "AWS::ECS::TaskDefinition",
            "Properties" : {
                "ContainerDefinitions": [
                    {
                        "Image": "576912678702.dkr.ecr.us-east-1.amazonaws.com/hello-world:latest",
                        "Name": "nginx",
                        "Memory":"300",
                        "PortMappings":[
                            {
                              "ContainerPort":80,
                              "hostPort": 8080,
                              "protocol": "HTTP"
                            }
                        ]
                    }                    
                ]
            }
        },
        "MyECSService": {
            "Type": "AWS::ECS::Service",
            "Properties" : {
                "Cluster": "ecs-poc",
                "DesiredCount": "1",
                "TaskDefinition" : { "Ref": "Taskdefinition" }
            }
        }
    }
}