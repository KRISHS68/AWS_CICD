{
    "Resources": {
        "Taskdefinition": {
            "Type" : "AWS::ECS::TaskDefinition",
            "Properties" : {
                "ContainerDefinitions": [
                    {
                        "Image": {
                            "Fn::Join": [":","576912678702.dkr.ecr.us-east-1.amazonaws.com/hello-world",{"Ref":"tag"}]
                        },
                        "Name": "nginx",
                        "Memory":"300",
                        "PortMappings":[
                            {
                              "ContainerPort": 80,
                              "HostPort": 8080,
                              "Protocol":"tcp"                              
                            }
                        ]
                    }                    
                ]
            }
        },
        "MyECSService": {
            "Type": "AWS::ECS::Service",
            "Properties" : {
                "Cluster": "ecs-poc",
                "DesiredCount": "1",
                "TaskDefinition" : { "Ref": "Taskdefinition" }
            }
        }
    }
}